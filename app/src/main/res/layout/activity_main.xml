    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="@string/app_name"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:textSize="15dp"
                        android:text="乡/镇:"/>
                    <Spinner
                        android:id="@+id/xian_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="4"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:textSize="15dp"
                        android:text="村"/>
                    <Spinner
                        android:id="@+id/cun_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="4"
                        android:textSize="15dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="低保人姓名"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <EditText
                        android:id="@+id/dbr_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="身份证号"/>
                    <EditText
                        android:id="@+id/sfz_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow >
                    <Button
                        android:id="@+id/camera_btn"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="拍摄照片"
                        android:textSize="15dp"
                        android:drawableStart="@drawable/sy_widget_button_camera"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"/>
                </TableRow>
            </TableLayout>
            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector_color2"
                android:textColor="@drawable/button_selector_color2"
                android:textSize="15dp"
                android:text="保存"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看全部照片"
                android:id="@+id/grid_btn"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>