<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--标题栏-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_margin="15dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="25dp"
                        android:text="入户调查表"/>
                </TableRow>
            </TableLayout>

            <!--基本信息-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="5"
                    android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:textSize="15dp"
                        android:text="县"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="5"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:textSize="15dp"
                        android:text="乡/镇"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="5"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:textSize="15dp"
                        android:text="村/社区"/>
                </TableRow>
            </TableLayout>
            <!--拍摄照片-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow >
                    <Button
                        android:id="@+id/camera_btn"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="身份证拍照识别"
                        android:textSize="15dp"
                        android:drawableStart="@drawable/sy_widget_button_camera"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"/>
                </TableRow>
            </TableLayout>

            <!--第一部分-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="低保人姓名"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="身份证号"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="联系电话"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="2"
                        android:textSize="15dp"
                        android:text="开始保障时间"/>
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="3"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="是/否立卡"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="否" />
                    </RadioGroup>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="保障金额"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
            </TableLayout>

            <!--家庭成员-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text="家庭成员"/>
                    <ListView
                        android:id="@+id/jtcy_list"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></ListView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text=""/>

                    <Button
                        android:id="@+id/jtcy_add_btn"
                        android:background="@drawable/button_selector_color2"
                        android:text="添加"
                        android:textColor="@drawable/button_selector_color2" />

                    <Button
                        android:id="@+id/jtcy_delete_btn"
                        android:background="@drawable/button_selector_color2"
                        android:text="删除"
                        android:textColor="@drawable/button_selector_color2" />
                </TableRow>
            </TableLayout>

            <!--第二部分-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主要致贫原因"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="家庭住房情况"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="家庭财产情况"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="10"
                        android:textSize="15dp"/>
                </TableRow>
            </TableLayout>

            <!--赡养人情况-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text="赡养人情况"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></ListView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text=""/>

                    <Button
                        android:id="@+id/syr_add_btn"
                        android:background="@drawable/button_selector_color2"
                        android:text="添加"
                        android:textColor="@drawable/button_selector_color2" />

                    <Button
                        android:id="@+id/syr_delete_btn"
                        android:background="@drawable/button_selector_color2"
                        android:text="删除"
                        android:textColor="@drawable/button_selector_color2" />
                </TableRow>
            </TableLayout>

            <!--政策性收入-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text="政策性收入"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></ListView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text=""/>

                    <Button
                        android:id="@+id/zcxsr_add_btn"
                        android:background="@drawable/button_selector_color2"
                        android:text="添加"
                        android:textColor="@drawable/button_selector_color2" />

                    <Button
                        android:id="@+id/zcxsr_delete_btn"
                        android:background="@drawable/button_selector_color2"
                        android:text="删除"
                        android:textColor="@drawable/button_selector_color2" />
                </TableRow>
            </TableLayout>

            <!--工资性收入-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text="工资性收入"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></ListView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text=""/>
                    <Button
                        android:id="@+id/gzxsr_add_btn"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="添加"/>
                    <Button
                        android:id="@+id/gzxsr_delete_btn"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="删除"/>
                </TableRow>
            </TableLayout>

            <!--土地收入-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text="土地收入"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></ListView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text=""/>
                    <Button
                        android:id="@+id/tdsr_add_btn"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="添加"/>
                    <Button
                        android:id="@+id/tdsr_delete_btn"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="删除"/>
                </TableRow>
            </TableLayout>

            <!--经营性收入 和 其他收入-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经营性收入"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="3"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他收入"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="3"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="所有收入总额"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="7"
                        android:textSize="15dp"/>
                </TableRow>
            </TableLayout>

            <!--医疗保障-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text="医疗保障"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></ListView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text=""/>
                    <Button
                        android:id="@+id/ylbz_add_btn"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="添加"/>
                    <Button
                        android:id="@+id/ylbz_delete_btn"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="删除"/>
                </TableRow>
            </TableLayout>

            <!--教育保障-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:background="@color/bg_gray"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text="教育保障"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></ListView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:ems="1"
                        android:textSize="15dp"
                        android:text=""/>
                    <Button
                        android:id="@+id/jybz_add_btn"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="添加"/>
                    <Button
                        android:id="@+id/jybz_delete_btn"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="删除"/>
                </TableRow>
            </TableLayout>

            <!--经营性收入 和 其他收入-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="其他情况"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="7"
                        android:textSize="15dp"/>
                </TableRow>
            </TableLayout>

            <!--保存-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_color2"
                        android:textColor="@drawable/button_selector_color2"
                        android:text="保存"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>